<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><!-- 参数管理手工映射SQL语句 -->

<!-- 参数管理手工映射SQL语句 -->
<!-- ASN表商品关联表 -->
<mapper namespace="packagePick">

    <sql id="sql_where">
        <if test="null!=id  and ''!= id">
            and a.id = #{id}
        </if>
    </sql>


    <!-- 列表查询 -->
    <select id="queryList" parameterType="map" resultType="dto">
        SELECT a.*
        FROM w_package_pick a
        <include refid="sql_where"/>
        ORDER by a.id
        <if test="null!=start">
            limit #{start},#{end}
        </if>
    </select>

    <!-- 列表数量查询 -->
    <select id="queryListCount" parameterType="map" resultType="dto">
        SELECT count(1) as total
        FROM w_package_pick a
        <include refid="sql_where"/>
        ORDER by a.id
    </select>

    <!-- 对象查询 -->
    <select id="getInfo" parameterType="map" resultType="dto">
        SELECT a.*
        FROM w_package_pick a
        <include refid="sql_where"/>
    </select>

    <!-- 插入 -->
    <insert id="saveInfo" parameterType="map">
        insert into w_package_pick (package_id, picking_id,picking_sku_id,
        picking_num,create_time, creator,is_delete)
        values (#{package_id}, #{picking_id},#{picking_sku_id},
        #{picking_num},now(), #{creator}, 'N')
        <selectKey resultType="java.lang.String" keyProperty="id">
            SELECT LAST_INSERT_ID() as id
        </selectKey>
    </insert>

    <!-- 删除 -->
    <update id="deleteInfo" parameterType="map">
        UPDATE w_package_pick set is_delete = 'Y' where id = #{id}
    </update>

    <!-- 修改 -->
    <update id="updateInfo" parameterType="map">
        UPDATE w_package_pick
        set
        <if test="null!=package_id  and ''!= package_id">
            package_id = #{package_id},
        </if>
        <if test="null!=picking_id  and ''!= picking_id">
            picking_id = #{picking_id},
        </if>
        <if test="null!=picking_num  and ''!= picking_num">
            picking_num = #{picking_num},
        </if>
        <if test="null!=picking_sku_id  and ''!= picking_sku_id">
            picking_sku_id = #{picking_sku_id},
        </if>
        <if test="null!=updator  and ''!= updator">
            a.updator = #{updator}, ,
        </if>
        update_time = now()
        where id = #{id}
    </update>

    <delete id="deletePackagePick" parameterType="map">
        delete from w_package_pick where id=#{id}
    </delete>
</mapper>
